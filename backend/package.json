{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/index.js",          // points at the file we’ll generate
  "type": "module",                 // optional: lets you use ES-modules import syntax
  "scripts": {
    "clean": "rimraf dist",         // wipe old build output            
    "dev":   "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "npm run clean && tsc",// compile *.ts  →  dist/*.js  
    "start": "node dist/index.js"   // run the compiled code in prod
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/node": "^22.15.15",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "rimraf": "^5.0.0"              // tiny cross-platform “rm -rf”
  },
  "license": "ISC"
}
